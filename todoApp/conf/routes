# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Todos
GET		/todos					controllers.Application.todos()
GET		/createTodo				controllers.Application.createTodo()
GET		/deleteTodo/:id		controllers.Application.deleteTodo(id: Long)
GET		/updateTodo/:id		controllers.Application.updateTodo(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
